// 7.Minimum and maximum element in an array
// Input:arr = {9, 2, 14, 6}   Output: Max: 14, Min: 2
public static void findMaxMin(int[] arr) {
    int max = arr[0], min = arr[0];
    for (int i = 1; i < arr.length; i++) {
        if (arr[i] > max)
            max = arr[i];
        if (arr[i] < min)
            min = arr[i];
    }
   System.out.println("Max: " + max + ", Min: " + min);
}

